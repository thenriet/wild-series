{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
	<h1>{{ website }}
		index</h1>
	{% for program in programs %}
		<div class="program">
			<h2>{{ program.title }}</h2>

			<a href="{{ path('program_show', {'id': program.id}) }}">
				Details
			</a>

			<h3>{{ program.synopsis }}</h3>
		</div>
	{% endfor %}
{% endblock %}
